<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="15dp"
    tools:context="chandra.sensen.Activity_UbahUmat">

    <TextView
        android:text="Ubah Data"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"/>
    <TableRow>
        <TextView
            android:text="ID"
            android:fontFamily="casual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:paddingRight="8dp"/>
        <EditText
            android:id="@+id/idumat_edit"
            android:fontFamily="casual"
            android:textColor="@color/common_google_signin_btn_text_dark_disabled"
            android:focusable="false"
            android:clickable="false"
            android:editable="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="Nama"
            android:fontFamily="casual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:paddingRight="8dp"/>
        <EditText
            android:id="@+id/nama_edit"
            android:fontFamily="casual"
            android:textColor="@color/common_google_signin_btn_text_dark_disabled"
            android:focusable="false"
            android:clickable="false"
            android:editable="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/nama_alert_text"
            android:text="  *Panjang nama harus antara 5 sampai 20 karakter"
            android:visibility="gone"
            android:textColor="#FF0000"
            android:background="@color/colorAccent"
            android:layout_marginLeft="40dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="Alamat"
            android:fontFamily="casual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:paddingRight="8dp"/>
        <EditText
            android:id="@+id/alamat_edit"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:fontFamily="casual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/alamat_alert_text"
            android:text="  *Mohon isi alamat"
            android:visibility="gone"
            android:textColor="#FF0000"
            android:background="@color/colorAccent"
            android:layout_marginLeft="40dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="Tgl. Lahir"
            android:fontFamily="casual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:paddingRight="8dp"/>
        <EditText
            android:id="@+id/tgl_lahir_edit"
            android:fontFamily="casual"
            android:focusable="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/tgl_lahir_alert_text"
            android:text="  *Mohon isi tanggal lahir"
            android:visibility="gone"
            android:textColor="#FF0000"
            android:background="@color/colorAccent"
            android:layout_marginLeft="40dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/batal_button"
            android:fontFamily="casual"
            android:text="batal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/ubah_button"
            android:fontFamily="casual"
            android:text="ubah"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </TableRow>

</TableLayout>
